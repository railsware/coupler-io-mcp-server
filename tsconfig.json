{
  "compilerOptions": {
    "rootDir": "./src",
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "ESNext",
    "allowJs": true,
    "paths": {
      "@/tools/*": ["./src/tools/*"],
      "@/server/*": ["./src/server/*"]
    },

    // Bundler mode
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Type checking
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
